<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/text_view_margin"
        android:background="@color/colorPrimary"
        android:drawableLeft="@drawable/ic_report_white_24dp"
        android:drawablePadding="@dimen/activity_horizontal_padding"
        android:gravity="bottom"
        android:padding="@dimen/activity_horizontal_padding"
        android:text="@string/dialog_report"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_18sp"/>

    <EditText
        android:id="@+id/edt_dialog_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:inputType="textMultiLine"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_dialog_report_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_padding"
            android:text="@string/all_cancel"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_button"/>

        <TextView
            android:id="@+id/btn_dialog_report_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_padding"
            android:text="@string/all_send"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_button"/>
    </LinearLayout>
</LinearLayout>
